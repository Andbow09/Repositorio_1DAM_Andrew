<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ud8.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TableView fx:id="tablaEstudiantes" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="colNia" prefWidth="75.0" text="NIA" />
            <TableColumn fx:id="colNombre" prefWidth="75.0" text="Nombre" />
            <TableColumn fx:id="colFecha" prefWidth="75.0" text="Fecha Nacimiento" />
        </columns>
    </TableView>

    <Button fx:id="btnEditar" mnemonicParsing="false" onAction="#editar" text="Editar" />

    <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#eliminar" text="Eliminar" />

    <TextField fx:id="tfNia" promptText="Introduce NIA..." />

    <TextField fx:id="tfNombre" promptText="Introduce el Nombre..." />

    <DatePicker fx:id="dpFechaNacimiento" promptText="Introduce la fecha de nacimiento..." />

    <Button fx:id="btnInsertar" mnemonicParsing="false" onAction="#insertar" text="Insertar" />

    <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#guardar" text="Guardar" />
</VBox>
